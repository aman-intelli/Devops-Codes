Minikube With ingress: 
      
sudo apt update
   50 sudo apt install docker.io -y
   51  sudo chmod 777 /var/run/docker.sock
   52  curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
   53  sudo install minikube-linux-amd64 /usr/local/bin/minikube && rm minikube-linux-amd64
   54  minikube start
   55  sudo snap install kubectl --classic

Deployment: 

    kubectl create deployment nginx --image=nginx  --port=80
  
   58  kubectl create deployment carvilla --image=amanintellipaat/carvilla  --port=80

Service: 

   59  minikube addons enable ingress
    kubectl expose deploy nginx --type NodePort
kubectl expose deploy carvilla --type NodePort
   60  sudo nano ingress.yaml

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: nginx
  rules:
    - http:
        paths:
          - path: /nginx
            pathType: Prefix
            backend:
              service:
                name: nginx
                port:
                  number: 80
          - path: /carvilla
            pathType: Prefix
            backend:
              service:
                name: carvilla
                port:
                  number: 80

   64  kubectl create -f ingress.yaml 
   65  kubectl port-forward service/ingress-nginx-controller 8443:443 -n ingress-nginx --address 0.0.0.0
